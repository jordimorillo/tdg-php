{
  "name": "jordimorillo/tdg-php",
  "description": "A Test Driven Generative Development tool to make the code parting from tests",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.0",
    "guzzlehttp/guzzle": "^7.3",
    "symfony/dotenv": "^5.3",
    "phpunit/phpunit": "^9.5",
    "ext-curl": "*"
  },
  "require-dev": {
    "phpstan/phpstan": "^0.12.99",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Domain\\": "src/Domain/",
      "Application\\": "src/Application/",
      "Infrastructure\\": "src/Infrastructure/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
